@model AcunMedyaPortfolyoProject.Models.TableSlider
@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Slider Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(a => a.SliderID)
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <label>Resim URL</label>
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <button type="submit">Güncelle</button>
</form>


