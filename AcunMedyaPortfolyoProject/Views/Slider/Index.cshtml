@model List<AcunMedyaPortfolyoProject.Models.TableSlider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Slider</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SliderID</th>
                <th>Ad Soayd</th>
                <th>Açıklama</th>
                <th>ResimURL</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SliderID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageURL" style="width:40px;height:40px" /></td>
                    <td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-danger"> Güncelle </a></td>
                    <td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-dark"> Sil </a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Slider/CreatSlider/" class="btn btn-danger"> Oluştur</a>
</div>

