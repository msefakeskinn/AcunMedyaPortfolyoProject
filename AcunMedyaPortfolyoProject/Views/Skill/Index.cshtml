@model List<AcunMedyaPortfolyoProject.Models.TableSkill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Yetenekler Sayfası</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SkillID</th>
                <th>Yetenek Adı</th>
                <th>Yüzdelik</th>
                <th>Açıklama</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SkillID</td>
                    <td>@item.SkillName</td>
                    <td>@item.Percentage</td>
                    <td>@item.Description</td>
                    <td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-danger"> Güncelle </a></td>
                    <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-dark"> Sil </a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Skill/CreatSkill/" class="btn btn-danger"> Oluştur</a>
</div>
