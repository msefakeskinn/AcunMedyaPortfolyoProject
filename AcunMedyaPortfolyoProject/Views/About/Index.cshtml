@model List<AcunMedyaPortfolyoProject.Models.TableAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<h2> Burası Hakkımızda sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>AboutID</th>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Doğum</th>
                <th>Website</th>
                <th>Telefon</th>
                <th>Şehir</th>
                <th>Yaş</th>
                <th>Mail</th>
                <th>Freelance</th>
                <th>Açıklama 1</th>
                <th>Açıklama 2</th>
                <th>Degrree</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AboutID</td>
                    <td><img src="@item.ImageURL" style="width:40px;height:40px"/></td>
                    <td>@item.Title</td>
                    <td>@item.BirthDay</td>
                    <td>@item.WebSite</td>
                    <td>@item.Phone</td>
                    <td>@item.City</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Freelance</td>
                    <td>@item.Description1</td>
                    <td>@item.Description2</td>
                    <td>@item.Degree</td>
                    <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-danger"> Güncelle </a></td>
                    <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-dark"> Sil </a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/About/CreatAbout/" class="btn btn-danger"> Oluştur</a>
</div>

