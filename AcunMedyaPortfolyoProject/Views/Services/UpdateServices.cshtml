@model AcunMedyaPortfolyoProject.Models.TableServices
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Hizmetler Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(a => a.ServicesID)
    <label>Açıklama1</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <label>İkonURL</label>
    @Html.TextBoxFor(x => x.IconURL, new { @class = "form-control" })
    <label>Açıklama2</label>
    @Html.TextBoxFor(x => x.Description2, new { @class = "form-control" })
    <button type="submit">Güncelle</button>
</form>
