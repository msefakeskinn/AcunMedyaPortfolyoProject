@model AcunMedyaPortfolyoProject.Models.TableMessage
@{
    ViewBag.Title = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Mesaj Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(a => a.MessageID)
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <label>Mesaj</label>
    @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })
    <button type="submit">Güncelle</button>
</form>    

