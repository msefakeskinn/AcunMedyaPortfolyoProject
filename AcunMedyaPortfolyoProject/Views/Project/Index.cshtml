@model List<AcunMedyaPortfolyoProject.Models.TableProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Burası Proje Sayfası</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ProjectID</th>
                <th>Proje Adı</th>
                <th>Açıklama</th>
                <th>Proje Linki</th>
                <th>Resim1</th>
                <th>Resim2</th>
                <th>Resim3</th>
                <th>Kategori</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProjectID</td>
                    <td>@item.ProjectName</td>
                    <td>@item.Description</td>
                    <td>@item.ProjectLink</td>
                    <td><img src="@item.İmage1" style="width:40px;height:40px"/></td>
                    <td><img src="@item.İmage2" style="width:40px;height:40px" /></td>
                    <td><img src="@item.İmage3" style="width:40px;height:40px" /></td>
                    <td>@item.TableCategory.CategoryName</td>
                    <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-danger"> Güncelle </a></td>
                    <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-dark"> Sil </a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Project/CreatProject/" class="btn btn-danger"> Oluştur</a>
</div>
