@model AcunMedyaPortfolyoProject.Models.TableTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Referanslar Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(a => a.TestimonialID)
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <label>Referans Adı</label>
    @Html.TextBoxFor(x => x.TestimonialName, new { @class = "form-control" })
    <label>Açıklama2</label>
    @Html.TextBoxFor(x => x.Description2, new { @class = "form-control" })
    <label>Resim URL</label>
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <label>Ünvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <button type="submit">Güncelle</button>
</form>

