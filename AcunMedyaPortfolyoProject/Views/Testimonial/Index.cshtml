@model List<AcunMedyaPortfolyoProject.Models.TableTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Referanslar Sayfası</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>TestimonialID</th>
                <th>Açıklama</th>
                <th>Reseferans Adı</th>
                <th>Açıklama2</th>
                <th>ResimURL</th>
                <th>Ünvan</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.Description</td>
                    <td>@item.TestimonialName</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageURL" style="width:40px;height:40px" /></td>
                    <td>@item.Title</td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-danger"> Güncelle </a></td>
                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-dark"> Sil </a></td>
                </tr>
            }
            </tbody>
        </table>
        <a href="/Testimonial/CreatTestimonial/" class="btn btn-danger"> Oluştur</a>
    </div>

