@model List<AcunMedyaPortfolyoProject.Models.TableEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Burası Eğitim Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>EducationID</th>
                <th>Başlangıç Yılı</th>
                <th>Bitiş Yılı</th>
                <th>Okul Adı</th>
                <th>Açıklama</th>
                <th>Bölüm</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EducationID</td>
                    <td>@item.StartYear</td>
                    <td>@item.EndYear</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Section</td>
                    <td><a href="/Education/UpdateEducation/@item.EducationID" class="btn btn-danger"> Güncelle </a></td>
                    <td><a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-dark"> Sil </a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Education/CreatEducation/" class="btn btn-danger"> Oluştur</a>
</div>
