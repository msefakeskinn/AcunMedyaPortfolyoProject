@model AcunMedyaPortfolyoProject.Models.TableEducation
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Eğitim Güncellem Sayfası</h2>
<form method="post">
    @Html.HiddenFor(a => a.EducationID)
    <label>Başlangıç Yılı</label>
    @Html.TextBoxFor(x => x.StartYear, new { @class = "form-control" })
    <label>Bitiş Yılı</label>
    @Html.TextBoxFor(x => x.EndYear, new { @class = "form-control" })
    <label>Okul Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <label>Bölüm</label>
    @Html.TextBoxFor(x => x.Section, new { @class = "form-control" })
    <button>Güncelle</button>
</form>

